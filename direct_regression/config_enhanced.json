{
  "model": {
    "volume_size": [64, 64, 64],
    "base_channels": 64
  },
  "training": {
    "num_epochs": 50,
    "batch_size": 8,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "grad_clip_max_norm": 1.0
  },
  "loss": {
    "l1_weight": 1.0,
    "ssim_weight": 0.5,
    "perceptual_weight": 0.1,
    "edge_weight": 0.1,
    "multiscale_weight": 0.3
  },
  "data": {
    "dataset_path": "/workspace/drr_patient_data",
    "max_patients": 1000,
    "num_workers": 4
  },
  "logging": {
    "log_interval": 10,
    "val_interval": 1,
    "save_checkpoint_interval": 5
  },
  "world_size": 4
}
