{
  "model": {
    "volume_size": [128, 128, 128],
    "base_channels": 64
  },
  "training": {
    "batch_size": 4,
    "num_epochs": 50,
    "learning_rate": 1e-4,
    "weight_decay": 0.01,
    "grad_clip_max_norm": 1.0
  },
  "data": {
    "dataset_path": "/workspace/drr_patient_data",
    "max_patients": 1000,
    "num_workers": 4
  },
  "loss": {
    "l1_weight": 1.0,
    "ssim_weight": 0.8,
    "perceptual_weight": 0.3,
    "edge_weight": 0.3,
    "multiscale_weight": 0.3
  },
  "logging": {
    "log_interval": 10,
    "val_interval": 1,
    "save_checkpoint_interval": 5
  }
}
