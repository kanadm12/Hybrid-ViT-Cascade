{
  "model_name": "direct_ct_regression",
  "description": "Direct X-ray to CT regression (no diffusion) to validate architecture",
  
  "model": {
    "volume_size": [64, 64, 64],
    "xray_img_size": 512,
    "voxel_dim": 256,
    "vit_depth": 4,
    "num_heads": 4,
    "xray_feature_dim": 512
  },
  
  "training": {
    "batch_size": 8,
    "learning_rate": 1e-4,
    "num_epochs": 100,
    "gradient_clip": 1.0,
    "weight_decay": 0.01,
    "l1_weight": 1.0,
    "ssim_weight": 0.5
  },
  
  "data": {
    "dataset_path": "/workspace/drr_patient_data",
    "max_patients": 100,
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "num_workers": 4
  },
  
  "checkpoints": {
    "save_dir": "checkpoints_direct",
    "save_every": 1
  }
}
