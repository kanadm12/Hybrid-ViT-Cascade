{
  "model": {
    "volume_size": [64, 64, 64],
    "xray_size": 512,
    "hidden_channels": 64,
    "base_model_checkpoint": "direct_regression/checkpoints_enhanced/best_model.pt"
  },
  
  "data": {
    "dataset_path": "/workspace/drr_patient_data",
    "max_patients": null,
    "num_workers": 4
  },
  
  "training": {
    "batch_size": 4,
    "num_epochs": 40,
    "learning_rate": 5e-5,
    "weight_decay": 1e-5,
    "gradient_clip": 1.0,
    "use_amp": true
  },
  
  "loss": {
    "l1_weight": 1.0,
    "frequency_weight": 0.5,
    "gradient_weight": 0.3,
    "perceptual_weight": 0.2,
    "consistency_weight": 0.1
  },
  
  "checkpoint": {
    "save_dir": "detail_refinement/checkpoints",
    "save_interval": 2
  },
  
  "logging": {
    "print_interval": 10
  }
}
