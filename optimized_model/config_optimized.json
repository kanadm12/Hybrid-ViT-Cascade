{
    "model": {
        "volume_size": [64, 64, 64],
        "xray_img_size": 512,
        "voxel_dim": 256,
        "num_attn_blocks": 2,
        "num_ffn_blocks": 4,
        "num_heads": 8,
        "xray_feature_dim": 512,
        "use_cnn_branch": true,
        "use_learnable_priors": true
    },
    
    "training": {
        "num_epochs": 15,
        "batch_size": 8,
        "learning_rate": 1e-4,
        "weight_decay": 0.01,
        "grad_clip_max_norm": 1.0,
        "warmup_epochs": 2
    },
    
    "loss": {
        "l1_weight": 1.0,
        "ssim_weight": 0.5,
        "uncertainty_reg_weight": 0.01
    },
    
    "data": {
        "dataset_path": "/workspace/drr_patient_data",
        "max_patients": 1000,
        "num_workers": 4,
        "prefetch_factor": 2
    },
    
    "optimization": {
        "use_mixed_precision": true,
        "compile_model": false
    },
    
    "logging": {
        "log_interval": 10,
        "val_interval": 1,
        "save_checkpoint_interval": 5
    }
}
