{
  "model_name": "hybrid_vit_cascade_multi_view",
  "description": "Multi-view (frontal + lateral) X-ray to CT generation",
  
  "xray_config": {
    "img_size": 512,
    "num_views": 2,
    "share_view_weights": false,
    "view_types": ["frontal", "lateral"]
  },
  
  "stage_configs": [
    {
      "name": "stage1",
      "volume_size": [64, 64, 64],
      "voxel_dim": 256,
      "vit_depth": 4,
      "num_heads": 4,
      "use_depth_lifting": true,
      "use_physics_loss": false,
      "physics_weight": 0.0
    },
    {
      "name": "stage2",
      "volume_size": [128, 128, 128],
      "voxel_dim": 384,
      "vit_depth": 6,
      "num_heads": 6,
      "use_depth_lifting": true,
      "use_physics_loss": false,
      "physics_weight": 0.0
    },
    {
      "name": "stage3",
      "volume_size": [256, 256, 256],
      "voxel_dim": 512,
      "vit_depth": 8,
      "num_heads": 8,
      "use_depth_lifting": true,
      "use_physics_loss": false,
      "physics_weight": 0.0
    }
  ],
  
  "training": {
    "num_timesteps": 1000,
    "v_parameterization": true,
    "batch_size": 4,
    "learning_rate": 5e-5,
    "num_epochs_per_stage": 100,
    "gradient_clip": 1.0,
    "ema_decay": 0.9999
  },
  
  "data": {
    "dataset_path": "workspace/drr_patient_data",
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "normalize_range": [-1, 1],
    "target_xray_size": 512,
    "validate_alignment": true,
    "augmentation": false,
    "cache_in_memory": false,
    "flip_drrs_vertical": true,
    "_comment": "flip_drrs_vertical: Set to true if your DRRs are vertically flipped relative to CT orientation"
  }
}
